<head>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name='mobile-web-app-capable' content='yes'>
  <meta name='apple-mobile-web-app-capable' content='yes'>
  <!-- Chrome, Firefox OS and Opera mobile address bar theming -->
  <meta name="theme-color" content="#000000">
  <!-- Windows Phone mobile address bar theming -->
  <meta name="msapplication-navbutton-color" content="#000000">
  <!-- iOS Safari mobile address bar theming -->
  <meta name="apple-mobile-web-app-status-bar-style" content="#000000">
  <!-- SEO -->
  {% seo title=false %}
  <!-- Favicon -->
  {% include favicons.liquid %}
  <title>
    {% if page.layout == 'home' %}
    {{ site.title }}
    {% elsif page.layout == 'page' or page.layout == 'learn' or page.layout == 'post' or page.layout == 'tool' or
    page.layout == 'author' %}
    {{ page.title | append: " | " | capitalize }}{{ site.title }}
    {% elsif page.layout == 'category' %}
    {{ page.title | append: " | " | prepend: "post " | replace: 'js', 'javascript' | replace: 'nodejavascript', 'nodejs'
    | capitalize }}{{ site.title }}
    {% endif %}
  </title>
  <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Ubuntu" />
  {% assign sit = site.url %}
  <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/halfmoon/css/halfmoon.min.css">
  <link rel="stylesheet" type="text/css" href="{{ sit }}{{ '/assets/css/component.css'  }}">
  <link rel="stylesheet" type="text/css" href="{{ sit }}{{ '/assets/css/hm.css'  }}">
  <link rel="stylesheet" type="text/css" href="{{ sit }}{{ '/assets/css/landing.css'  }}">
  <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
  {% if page.layout == "page" or "post" %}
  <link rel="stylesheet" type="text/css" href="{{ sit }}{{ '/assets/css/page.css'  }}">
  <link rel="stylesheet" type="text/css" href="{{ sit }}{{ '/assets/css/syntax.css'  }}">
  {% endif %}
  {% if page.layout == "redirect" %}
  <link rel="canonical" href="{{ page.redirect_to }}" />
  <meta http-equiv="content-type" content="text/html; charset=utf-8" />
  <meta http-equiv="refresh" content="0;url={{ page.redirect_to }}" />
  {% endif %}
</head>