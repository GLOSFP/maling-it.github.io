---
layout: default
---
{% capture page_content %}
{% for section in page.sections %}
{% capture section_include %}{% include {{ section }} %}{% endcapture %}
<div data-source="{{ section }}">
  {{ section_include | markdownify }}
</div>
{% endfor %}
{{ content }}
{% endcapture %}
<div class="card border-0 bg-light-lm p-0">
  <div class="row">
    <div class="col-lg-8 shadow-lg">
      <div id="content" class="content m-0 mt-20">
        <h1 role="heading" aria-level="1" class="text-center font-weight-bold font-size-24 entry-title content-title">{{
          page.title | capitalize }}</h1>
        <div class="text-center ml-0">
          <i class="bi bi-calendar-event mr-5"></i> {{ page.date | date_to_string }}
          {% include sharing.liquid %}
        </div>
        <hr class="border-bottom">
        <div class="post-content">
          <div class="content">
            {% include defcontent.liquid content=page_content %}

          </div>
        </div>
      </div>
      {% include navigate.liquid %}
    </div>
    <div class="col-lg-4">
      <div class="content position-lg-sticky top-lg-0 left-lg-0 py-card my-0">
        <div class="content toc_container m-5 border-bottom hidden-md-and-down">
          <h2 class="content-title">Table of content</h2>
          {% include toc.liquid html=page_content h_max=3 class="toc_list" item_class="ui_live_toc_%level%" %}
        </div>
        {% include trending-post.liquid %}
        {% include trending-tags.liquid %}
      </div>
    </div>
    <!-- end -->
  </div>
</div>
{% include footer.liquid %}