---
layout: default
---
<div class="card p-0 shadow-lg">
    <div id="dsh" class="content">
        <img alt="Logo {{ site.title }}" class="zxa" src="assets/{{ site.title | downcase }}.svg">

        <h1 class="hero-header text-center">
            <strong class="font-weight-bolder">{{ site.title }}<span class="blink">|</span></strong>
        </h1>
    </div>
</div>
<div class="m-0 p-0 shadow-lg">
    {% for cat in site.categories %}
    <div class="card p-0 shadow-lg">
        <p class="d-flex justify-content-center text-center">
            <img width="30" class="mr-5 mb-5"
                src="https://raw.githubusercontent.com/Zxce3/Zxce3/main/icons/{{ cat | first | replace: 'js', 'javascript' | replace: 'nodejavascript', 'nodejs' | replace: 'html', 'html5' | replace: 'css', 'css3'  | append:'-logo.svg'}}"
                alt="{{ cat | first }}">
            {{ cat.first | capitalize }}
        </p>
        <div class="content">
            <div class="row">
                {% for p in cat.last limit:6 %}
                {% include post-card.liquid %}
                {% endfor %}
            </div>
        </div>
    </div>
    {% endfor %}
    {% include footer.liquid %}